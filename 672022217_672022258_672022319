}
void header()
{
    system ("cls");
    printf ("===============================================================================================\n");
    printf ("|                                           DATA OBAT                                         |\n");
    printf ("===============================================================================================\n");
    printf ("| NO. |     Nama      |    Jenis    |  Perusahaan  | Tanggal masuk | Stock |      Harga @     |\n");
    printf ("===============================================================================================\n");
}

void loading()
{
    //loading program
            printf("\tLoading....");
            for(i=1;i<=6;i++)
            {
               printf("\b\b\b\b");
               if(i==1||i==3||i==5)
               printf("    ");
               if(i==2||i==4||i==6)
               {
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
               }
               Sleep(300);
            }
}

void tambah_obat()
{
    char save = 'y';

    system ("cls");
    printf ("===============================================================================================\n");
    printf ("|                                         TAMBAH OBAT                                         |\n");
    printf ("===============================================================================================\n");
    printf ("|                                 MASUKKAN DATA OBAT DI BAWAH                                 |\n");
    printf ("===============================================================================================\n");
    printf ("Masukkan jumlah obat yang ingin di inputkan : ");
    scanf ("%d", &jml);

    obat[i].numOfItem = jml;
    for (i = 0; i < jml; i++){
        printf ("Data obat ke-%d \n", i + 1);
        printf ("Nama obat                  : ");
        scanf (" %s", &obat[i].nama);
        printf ("Jenis obat                 : ");
        scanf ("%s", &obat[i].jenis);
        printf ("Perusahaan asal            : ");
        scanf ("%s", &obat[i].fct);
        printf ("Tanggal masuk (dd mm yyyy) : ");
        scanf (" %d %d %d", &obat[i].tanggal.tgl, &obat[i].tanggal.bln, &obat[i].tanggal.thn);
        printf ("Stock obat                 : ");
        scanf ("%d", &obat[i].stock);
        printf ("harga obat                 : ");
        scanf (" %d", &obat[i].harga);

        printf ("\n");
    }

    if (save == 'y' || save == 'Y')
    {
        file = fopen("dataObat.dat", "a+"); //selain file dapat ditulis file juga dapat dibaca
        fwrite(&obat[i], sizeof(struct data), 1, file); //Operator sizeof memberikan jumlah penyimpanan, dalam byte, yang diperlukan untuk menyimpan objek dari jenis operand

        gotoxy (15, 24);
        if (fwrite != 0)
            printf("\nBerhasil disimpan\n");

        else
            printf("\npenyimpanan bermasalah");
        fclose(file);
    }
    i++;
}

void lihat_obat()
{
    system ("cls");
    file = fopen ("dataObat", "r");

    header();
    for (k = 0; k < jml; k++){
            printf ("| %d  | %s     | %s   | %s   | %d %d %d  | %d   | %d     |\n", (k + 1), obat[k].nama,  obat[k].jenis,  obat[k].fct, obat[k].tanggal.tgl,  obat[k].tanggal.bln,  obat[k].tanggal.thn,  obat[k].stock,  obat[k].harga);
        }


    fclose(file);
}

void cari_obat()
{
    int dataFound = 0;

        system("cls");
        printf("\nMasukkan nama obat : ");
        scanf("%s", &nama);

        loading();
        printf ("\n\n");
            file = fopen("dataObat.dat", "r");
            printf("\nData obat %s\n", nama);

            for (k = 0; k < jml; k++)
            {
                if (strcmp(obat[k].nama, nama) ==  0)
                {
                    printf ("Data obat ke-%d \n", i + 1);
                    printf ("Nama obat                  : %s \n", obat[k].nama);
                    printf ("Jenis obat                 : %s \n", obat[k].jenis);
                    printf ("Perusahaan asal            : %s \n", obat[k].fct);
                    printf ("Tanggal masuk              : %d %d %d \n", obat[k].tanggal.tgl, &obat[k].tanggal.bln, &obat[k].tanggal.thn);
                    printf ("Stock obat                 : %d \n", obat[k].stock);
                    printf ("harga obat                 : %d \n", obat[k].harga);
                    printf("\n\n");
                    dataFound = 1;
                }
            }
            if (!dataFound)
            {
                printf("Maaf data obat %s tidak ditemukan", nama);
            }
            fclose(file);

    }

    
