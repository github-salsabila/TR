#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>
#include <windows.h>

FILE *file;
int jml, i = 0;
int pilih, k;
int kode[3], numOfItem, stock, tgl, bln, thn;
char nama[15], jenis[7], fct[15], kK[15];
long harga;

void gotoxy(int x, int y)
{
    COORD coord = {0, 0};
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

struct date{
    int tgl;
    int bln;
    int thn;
};

struct data{
    int kode[3];
    char nama[15];
    char jenis[7];
    char fct[15];
    int numOfItem;
    struct date tanggal;
    union {
     int tgl, bln, thn;
    };
    int stock;
    long harga;
};
struct data obat[50];

void password()
{
    char username[100];
    char password[100];

    PASS:
    	system("COLOR F4");
        gotoxy (40, 13);
        printf ("masukkan username :");
        scanf ("%s", username);
        gotoxy (40, 14);
        printf ("masukkan password :");
        fflush (stdin);

        char ch;
        int i = 0;
        while ((ch = (char)_getch()) != '\r')
        {
            password[i] = ch;
            printf("*");
            i++;
        }
        printf ("\n");

        if ((strcmp(username, "admin") == 0) && (strcmp(password, "cantik") == 0))
        {
            gotoxy (38, 16);
            printf ("selamat anda berhasil masuk\n");
        }
        else
        {
            gotoxy (30, 16);
            printf ("Password dan username salah... silahkan ulang lagi\n");
            system ("pause");
            system ("cls");
            goto PASS;
        }
}

void header()
{
    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                           DATA OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("| NO. |     Nama      |    Jenis    |  Perusahaan  | Tanggal masuk | Stock |      Harga @     |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
}


void loading()
{
    //loading program
            printf("\tLoading....");
            for(i=1;i<=6;i++)
            {
               printf("\b\b\b\b");
               if(i==1||i==3||i==5)
               printf("    ");
               if(i==2||i==4||i==6)
               {
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
               }
               Sleep(300);
            }
}

void tambah_obat()
{
    char save = 'y';

    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                         TAMBAH OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("|                                 MASUKKAN DATA OBAT DI BAWAH                                 |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
    gotoxy(10,10);
    printf ("Masukkan jumlah obat yang ingin di inputkan : ");
    scanf ("%d", &jml);

    obat[i].numOfItem = jml;
    for (i = 0; i < jml; i++){
    	gotoxy(10, 11);
        printf ("Data obat ke-%d \n", i + 1);
        gotoxy(10, 12);
        printf ("Nama obat                  : ");
        scanf (" %s", &obat[i].nama);
        gotoxy(10, 13);
        printf ("Jenis obat                 : ");
        scanf ("%s", &obat[i].jenis);
        gotoxy(10, 14);
        printf ("Perusahaan asal            : ");
        scanf ("%s", &obat[i].fct);
        gotoxy(10, 15);
        printf ("Tanggal masuk (dd mm yyyy) : ");
        scanf (" %d %d %d", &obat[i].tanggal.tgl, &obat[i].tanggal.bln, &obat[i].tanggal.thn);
        gotoxy(10, 16);
        printf ("Stock obat                 : ");
        scanf ("%d", &obat[i].stock);
        gotoxy(10, 17);
        printf ("harga obat                 : ");
        scanf (" %d", &obat[i].harga);

        printf ("\n");
    }
    
    if (save == 'y' || save == 'Y')
    {
        file = fopen("dataObat.dat", "a+"); //selain file dapat ditulis file juga dapat dibaca
        fwrite(&obat[i], sizeof(struct data), 1, file); //Operator sizeof memberikan jumlah penyimpanan, dalam byte, yang diperlukan untuk menyimpan objek dari jenis operand

        gotoxy (15, 24);
        if (fwrite != 0)
        {
        	gotoxy (50,20);
            printf("~Berhasil disimpan~\n");
		}
        else
            printf("\npenyimpanan bermasalah");
        fclose(file);
    }
    i++;
}


void tampilkan_obat()
{
    header();
    for (int i = 0; i < jml; i++)
    {
        printf ("\t| %-3d | %-13s | %-10s | %-12s | %02d-%02d-%04d    | %-5d | Rp %-15ld |\n",
            i + 1, obat[i].nama, obat[i].jenis, obat[i].fct, obat[i].tanggal.tgl, obat[i].tanggal.bln,
            obat[i].tanggal.thn, obat[i].stock, obat[i].harga);
    }
    system("pause");
}

void cari_obat() {
    char nama_obat[15];
    int ditemukan = 0;

    system("cls");
    gotoxy(10, 5);
    printf("===============================================================================================\n");
    gotoxy(10, 6);
    printf("|                                          CARI OBAT                                        |\n");
    gotoxy(10, 7);
    printf("===============================================================================================\n");
    gotoxy(10, 8);
    printf("|                                 MASUKKAN NAMA OBAT YANG DICARI                              |\n");
    gotoxy(10, 9);
    printf("===============================================================================================\n");
    gotoxy(10, 10);
    printf("Nama obat: ");
    scanf("%s", nama_obat);

    header();

    for (int j = 0; j < i; j++) {
        if (strcmp(nama_obat, obat[j].nama) == 0) {
        	gotoxy(10,10);
            printf("| %2d. | %13s | %10s | %13s | %2d-%2d-%4d | %5d | Rp.%15ld |\n",
                    j+1, obat[j].nama, obat[j].jenis, obat[j].fct,
                    obat[j].tanggal.tgl, obat[j].tanggal.bln, obat[j].tanggal.thn,
                    obat[j].stock, obat[j].harga);
            gotoxy(10,11);
            printf("-----------------------------------------------------------------------------------------------\n");
            ditemukan = 1;
        }
    }
    if (ditemukan == 0) {
        printf("Obat dengan nama %s tidak ditemukan.\n", nama_obat);
		}
}

void hapus_obat()
{
    char deleteObat[15];
    int flag = 0;

    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                          HAPUS OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("|                                 MASUKKAN NAMA OBAT YANG DIHAPUS                              |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
    gotoxy(10,10);
    printf("Masukkan nama obat yang ingin dihapus: ");
    scanf(" %s", deleteObat);

    for (int i = 0; i < jml; i++){
        if (strcmp(deleteObat, obat[i].nama) == 0){
            for (int j = i; j < jml - 1; j++){
                obat[j] = obat[j+1];
            }
            jml--;
            flag = 1;
            break;
        }
    }
    if (flag == 1){
        printf("\nObat dengan nama %s berhasil dihapus.\n", deleteObat);
    }
    else{
        printf("\nObat dengan nama %s tidak ditemukan.\n", deleteObat);
    }

    system("pause");
}

void ubah_obat()
{
int kodeObat;
char save;
system("cls");
header();
printf("\n");
gotoxy(5,14);
printf("Masukkan kode obat yang ingin diubah : ");
scanf("%d", &kodeObat);

for(i = 0; i < jml; i++)
{
    if(obat[i].kode[0] == kodeObat)
    {
        printf("\nData sebelum diubah :\n");
        printf("Nama Obat     : %s\n", obat[i].nama);
        printf("Jenis Obat    : %s\n", obat[i].jenis);
        printf("Perusahaan    : %s\n", obat[i].fct);
        printf("Jumlah Masuk  : %d-%d-%d\n", obat[i].tanggal.tgl, obat[i].tanggal.bln, obat[i].tanggal.thn);
        printf("Stock Obat    : %d\n", obat[i].stock);
        printf("Harga @ Obat  : %ld\n", obat[i].harga);

        printf("\n\nSilahkan masukkan data baru\n");
        printf("Nama Obat     : ");
        fflush(stdin);
        gets(obat[i].nama);
        printf("Jenis Obat    : ");
        gets(obat[i].jenis);
        printf("Perusahaan    : ");
        gets(obat[i].fct);
        printf("Tanggal Masuk (dd-mm-yyyy): ");
        scanf("%d-%d-%d", &obat[i].tanggal.tgl, &obat[i].tanggal.bln, &obat[i].tanggal.thn);
        printf("Stock Obat    : ");
        scanf("%d", &obat[i].stock);
        printf("Harga @ Obat  : ");
        scanf("%ld", &obat[i].harga);

        printf("\n\nData berhasil diubah\n");
        printf("Apakah Anda ingin menyimpan data baru ini? (y/n)");
        fflush(stdin);
        scanf("%c", &save);

        if(save == 'y' || save == 'Y')
        {
            file = fopen("data_obat.txt", "w");
            for(k = 0; k < jml; k++)
            {
                fprintf(file, "%d %s %s %s %d-%d-%d %d %ld\n", obat[k].kode[0], obat[k].nama, obat[k].jenis, obat[k].fct, obat[k].tanggal.tgl, obat[k].tanggal.bln, obat[k].tanggal.thn, obat[k].stock, obat[k].harga);
            }
            fclose(file);
            printf("\nData berhasil disimpan!");
        }
        else
        {
            printf("\nData tidak disimpan!");
        }

        printf("\n\nTekan enter untuk kembali ke menu utama");
        getch();
        
    }
}
printf("Data tidak ditemukan!");
printf("\n\nTekan enter untuk kembali ke menu utama");
getch();
}


void animation()
{
    int menu, i;
    int read = 0;
    char nama[50];

    //program animasi
    int a, invoiceFound = 0;
    double b;
    system("cls");
    char salam[] = "\t\t\t\t\t SELAMAT DATANG DI APOTEK TADIKA MESRA   ";
    int k, l;

    printf("\n\n\n");
    for (a = 0; salam[a] != NULL; a++)
    {
        printf("%c", salam[a]);
        for (b = 0; b <= 9999999; b++)
        {
        }
    }
    fflush(stdin);
}


int main()
{
    int choice;

    password();
    animation();

    do{
    	printf("\n");
    	gotoxy(20,5);
        printf ("================================================================================\n");
        printf("\n");
    	gotoxy(20,6);
        printf ("|                               APOTEK TADIKA MESRA                            |\n");
        printf("\n");
    	gotoxy(20,7);
        printf ("================================================================================\n");
    	gotoxy(20,8);
        printf ("|                                   HALAMAN MENU                               |\n");
    	gotoxy(20,9);
        printf ("================================================================================\n");
    	gotoxy(20,10);
        printf ("|                                                                              |\n");
    	gotoxy(20,11);
        printf ("| 1. Tambah data obat                                                          |\n");
    	gotoxy(20,12);
        printf ("| 2. Lihat data obat                                                           |\n");
    	gotoxy(20,13);
        printf ("| 3. Cari data obat                                                            |\n");
    	gotoxy(20,14);
        printf ("| 4. Ubah data obat                                                            |\n");
    	gotoxy(20,15);
        printf ("| 6. Hapus data obat                                                           |\n");
    	gotoxy(20,16);
        printf ("| 7. Keluar                                                                    |\n");
    	gotoxy(20,17);
        printf ("|                                                                              |\n");
    	gotoxy(20,18);
        printf ("================================================================================\n");
    	gotoxy(20,19);
        printf(" Masukkan pilihan : "); 
		scanf("%d", &choice);                                    
    
        switch(choice){
        case 1:
            tambah_obat();
            getch();
            break;
        case 2:
            tampilkan_obat();
            getch();
            break;
        case 3:
            cari_obat();
            getch();
            break;
        case 4:
            ubah_obat();
            getch();
            break;
        case 5:
            hapus_obat();
            getch();
            break;
        case 6:
	    system("cls");
	    gotoxy(35,14);
            printf("\n\nTerima kasih telah menggunakan program ini!");
            getch();
            break;
        default:
	    system("cls");
	    gotoxy(35,14);
            printf("\n\nMaaf, pilihan yang anda masukkan salah. Silakan coba lagi.");
            getch();
            break;
	    
        }
        system ("cls");
    }while(choice!=7);
    return 0;
}
