void ubah_obat()
{
    int kode,i,new_stok;
    float new_harga;
    printf("Masukkan kode obat yang ingin diubah: ");
    scanf("%d",&kode);
    for(i=0;i<50;i++)
    {
    if(obat[i].kode==kode)
    {
    printf("Masukkan stok obat yang baru: ");
    scanf("%d",&new_stok);
    printf("Masukkan harga obat yang baru: ");
    scanf("%f",&new_harga);
    o[i].stok=new_stok;
    obat[i].harga=new_harga;
    printf("Data obat berhasil diubah\n");
    break;
    }
    }
    if(i==50)
    printf("Maaf, obat tidak ditemukan");
}
    
void hapus_obat()
{
    int kode,i;
    printf("Masukkan kode obat yang ingin dihapus: ");
    scanf("%d",&kode);
    for(i=0;i<50;i++)
    {
    if(obat[i].kode==kode)
    {
    o[i].kode=0;
    o[i].stok=0;
    o[i].harga=0;
    strcpy(o[i].nama,"");
    printf("Data obat berhasil dihapus\n");
    break;
    }
    }
    if(i==50)
    printf("Maaf, obat tidak ditemukan");
    }

    void urutkan_obat()
    {
    int i,j,kode;
    char nama[30];
    int stok;
    float harga;
    for(i=0;i<50;i++)
    {
    for(j=i+1;j<50;j++)
    {
    if(o[i].kode>o[j].kode)
    {
    kode=o[i].kode;
    o[i].kode=o[j].kode;
    o[j].kode=kode;

    strcpy(nama,o[i].nama);
    strcpy(o[i].nama,o[j].nama);
    strcpy(o[j].nama,nama);

    stok=o[i].stok;
    o[i].stok=o[j].stok;
    o[j].stok=stok;

    harga=o[i].harga;
    o[i].harga=o[j].harga;
    o[j].harga=harga;
    }
    }
    }
    printf("Data obat berhasil diurutkan berdasarkan kode obat\n");
}


int main()
{
    int choice;

    //password();
    //variabel menu
    //animation();

    do{
        printf ("\n==============================================================================\n");
        printf ("|                               APOTEK TADIKA MESRA                            |\n");
        printf ("================================================================================\n");
        printf ("|                                   HALAMAN MENU                               |\n");
        printf ("================================================================================\n");
        printf ("| 1. Tambah data obat                                                          |\n");
        printf ("| 2. Lihat data obat                                                           |\n");
        printf ("| 3. Cari data obat                                                            |\n");
        printf ("| 4. Ubah data obat                                                            |\n");
        printf ("| 5. Urutkan data obat                                                         |\n");
        printf ("| 6. Hapus data obat                                                           |\n");
        printf ("| 7. Keluar                                                                    |\n");
        printf ("|                                                                              |\n");
        printf ("|                                                                              |\n");
        printf ("|                                                                              |\n");
        printf ("|                                                                              |\n");
        printf ("================================================================================\n");
        printf ("|                                                                              |\n");
        printf ("================================================================================\n");
        gotoxy (3, 18);
        printf ("Masukkan pilihan: ");
        scanf ("%d",&choice);

        switch(choice){
        case 1:
            tambah_obat();
            getch();
            break;
        case 2:
            lihat_obat();
            getch();
            break;
        case 3:
            cari_obat();
            getch();
            break;
        case 4:
            //ubah_obat();
            getch();
            break;
        case 5:
            //urutkan_obat();
            getch();
            break;
        case 6:
            //hapus_obat();
            getch();
            break;
        case 7:
            printf("\n\nTerima kasih telah menggunakan program ini!");
            getch();
            break;
        default:
            printf("\n\nMaaf, pilihan yang anda masukkan salah. Silakan coba lagi.");
            getch();
            break;
        }
        system ("cls");
    }while(choice!=7);
    return 0;
}
