	printf("Masukkan password : ");


	for(i=0;i<6;i++)
	{
		password[i]=getch();
		printf("*");
	}
	printf("\n");
	gotoxy(35,12);
	for(i=1; i <= 15; i++) // Perulangan kotak loading 15
    {
