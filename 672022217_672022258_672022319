        printf ("|                                                                              |\n");
    	gotoxy(20,19);
        printf ("================================================================================\n");
    	gotoxy(20,20);
        printf(" Masukkan pilihan : "); 
		scanf("%d", &choice);                                    
    
        switch(choice){
        case 1:
            tambah_obat();
            getch();
            break;
        case 2:
            lihat_obat();
            getch();
            break;
        case 3:
            cari_obat();
