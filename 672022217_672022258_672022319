#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>
#include <windows.h>
#include <math.h>
#include <time.h>

FILE *file;
int jml, i = 0;
int pilih, k;
int kode[3], numOfItem, stock, tgl, bln, thn;
char nama[15], jenis[7], fct[15], kK[15];
long harga;

void gotoxy(int x, int y)
{
    COORD coord = {0, 0};
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

struct date{
    int tgl;
    int bln;
    int thn;
};

struct data{
    int kode[3];
    char nama[15];
    char jenis[7];
    char fct[15];
    int numOfItem;
    struct date tanggal;
    union {
     int tgl, bln, thn;
    };
    int stock;
    long harga;
};
struct data obat[50];


void password()
{
    char username[100];
    char password[100];

    system("COLOR F4");

    PASS:
    	gotoxy (50, 11);
    	printf ("~SILAHKAN LOGIN~");
        gotoxy (45, 13);
        printf ("Masukkan username :");
        scanf ("%s", username);
        gotoxy (45, 14);
        printf ("Masukkan password :");
        fflush (stdin);

        char ch;
        int i = 0;
        while ((ch = (char)_getch()) != '\r')
        {
            password[i] = ch;
            printf("*");
            i++;
        }
        printf ("\n");

        if ((strcmp(username, "admin") == 0) && (strcmp(password, "cantik") == 0))
        {
            gotoxy (43, 16);
            printf ("~selamat anda berhasil masuk~\n\n\n\n\n\n");
            getch();
        }
        else
        {
            gotoxy (33, 16);
            printf ("Password dan username salah... silahkan ulang lagi\n");
            system ("pause");
            system("cls");
            goto PASS;
            
        }
}

void header()
{
    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                           DATA OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("| NO. |     Nama      |    Jenis    |  Perusahaan  | Tanggal masuk | Stock |      Harga @     |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
}


void loading()
{
    //loading program
            printf("\tLoading....");
            for(i=1;i<=6;i++)
            {
               printf("\b\b\b\b");
               if(i==1||i==3||i==5)
               printf("    ");
               if(i==2||i==4||i==6)
               {
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
               }
               Sleep(300);
            }
}

void tambah_obat()
{
    char save = 'y';

    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                         TAMBAH OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("|                                 MASUKKAN DATA OBAT DI BAWAH                                 |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
    gotoxy(10,10);
    printf ("Masukkan jumlah obat yang ingin di inputkan : ");
    scanf ("%d", &jml);

    obat[i].numOfItem = jml;
    for (i = 0; i < jml; i++){
    	gotoxy(10, 11);
        printf ("Data obat ke-%d \n", i + 1);
        gotoxy(10, 12);
        printf ("Nama obat                  : ");
        scanf (" %s", &obat[i].nama);
        gotoxy(10, 13);
        printf ("Jenis obat                 : ");
        scanf ("%s", &obat[i].jenis);
        gotoxy(10, 14);
        printf ("Perusahaan asal            : ");
        scanf ("%s", &obat[i].fct);
        gotoxy(10, 15);
        printf ("Tanggal masuk (dd mm yyyy) : ");
        scanf (" %d %d %d", &obat[i].tanggal.tgl, &obat[i].tanggal.bln, &obat[i].tanggal.thn);
        gotoxy(10, 16);
        printf ("Stock obat                 : ");
        scanf ("%d", &obat[i].stock);
        gotoxy(10, 17);
        printf ("harga obat                 : ");
        scanf (" %d", &obat[i].harga);

        printf ("\n");
    }

    if (save == 'y' || save == 'Y')
    {
        file = fopen("dataObat.dat", "a+"); //selain file dapat ditulis file juga dapat dibaca
        fwrite(&obat[i], sizeof(struct data), 1, file); //Operator sizeof memberikan jumlah penyimpanan, dalam byte, yang diperlukan untuk menyimpan objek dari jenis operand

        gotoxy (15, 24);
        if (fwrite != 0)
        {
        	gotoxy (50,20);
            printf("~Berhasil disimpan~\n");
		}
        else
            printf("\npenyimpanan bermasalah");
        fclose(file);
    }
    i++;
}


void lihat_obat()
{
    system ("cls");
    file = fopen ("dataObat", "r");

    header();
    for (k = 0; k < jml; k++){
    	    gotoxy(10, 10);
            printf ("| %d  | %s     | %s   | %s   | %d %d %d  | %d   | %d     |\n", (k + 1), obat[k].nama,  obat[k].jenis,  obat[k].fct, obat[k].tanggal.tgl,  obat[k].tanggal.bln,  obat[k].tanggal.thn,  obat[k].stock,  obat[k].harga);
        }


    fclose(file);
}

void cari_obat()
{
    int dataFound = 0;
    printf ("Cari berdasarkan : ");
    printf ("1. Nama Obat\n");
    printf ("2. Jenis Obat\n");
    printf ("3. Perusahaan asal\n");
    printf ("Pilih salah satu : ");
    scanf ("%d", &pilih);

    switch (pilih){

    case 1:

        //loading program
        loading();
        printf ("\n\n");
            file = fopen("dataObat.dat", "r");
            printf("\nData obat %s\n", nama);

            for (k = 0; k < jml; k++)
            {
                if (strcmp(obat[k].nama, nama) ==  0)
                {
                    printf ("Data obat ke-%d \n", i + 1);
                    printf ("Nama obat                  : %s ", obat[k].nama);
                    printf ("Jenis obat                 : %s ", obat[k].jenis);
                    printf ("Perusahaan asal            : %s ", obat[k].fct);
                    printf ("Tanggal masuk              : %d %d %d", obat[k].tanggal.tgl, &obat[k].tanggal.bln, &obat[k].tanggal.thn);
                    printf ("Stock obat                 : %d ", obat[k].stock);
                    printf ("harga obat                 : %d ", obat[k].harga);
                    printf("\n\n");
                    dataFound = 1;
                }
            }
            if (!dataFound)
            {
                printf("Maaf data obat %s tidak ditemukan", nama);
            }
            fclose(file);

        break;
    //case 2
      //  pabrik
    //if
      //  strcmp
    //else if


    }
}


void animation()
{
    int menu, i;
    int read = 0;
