    system("cls");
    char salam[] = "\t\t\t\t\t SELAMAT DATANG DI APOTEK TADIKA MESRA   ";
    int k, l;

    printf("\n\n\n");
    for (a = 0; salam[a] != NULL; a++)
    {
        printf("%c", salam[a]);
        for (b = 0; b <= 9999999; b++)
        {
        }
    }
    fflush(stdin);
}


