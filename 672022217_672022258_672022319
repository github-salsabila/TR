        printf ("| 1. Tambah data obat                                                          |\n");
    	gotoxy(20,12);
        printf ("| 2. Lihat data obat                                                           |\n");
    	gotoxy(20,13);
        printf ("| 3. Cari data obat                                                            |\n");
    	gotoxy(20,14);
        printf ("| 4. Ubah data obat                                                            |\n");
    	gotoxy(20,15);
        printf ("| 6. Hapus data obat                                                           |\n");
    	gotoxy(20,16);
        printf ("| 7. Keluar                                                                    |\n");
    	gotoxy(20,17);
        printf ("|                                                                              |\n");
    	gotoxy(20,18);
        printf ("================================================================================\n");
    	gotoxy(20,19);
        printf(" Masukkan pilihan : "); 
		scanf("%d", &choice);                                    
    
        switch(choice){
        case 1:
            tambah_obat();
            getch();
            break;
        case 2:
            tampilkan_obat();
            getch();
            break;
        case 3:
            cari_obat();
            getch();
            break;
        case 4:
            ubah_obat();
            getch();
            break;
        case 5:
            hapus_obat();
            getch();
            break;
        case 6:
	    system("cls");
	    gotoxy(35,14);
            printf("\n\nTerima kasih telah menggunakan program ini!");
            getch();
            break;
        default:
	    system("cls");
	    gotoxy(35,14);
            printf("\n\nMaaf, pilihan yang anda masukkan salah. Silakan coba lagi.");
            getch();
            break;
	    
        }
        system ("cls");
    }while(choice!=7);
    return 0;
}
