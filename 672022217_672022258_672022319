    for (a = 0; salam[a] != NULL; a++)
    {
        printf("%c", salam[a]);
        for (b = 0; b <= 9999999; b++)
        {
        }
    }
    fflush(stdin);
}


int main()
{
    int choice;

    password();
    animation();

    do{
    	printf("\n");
    	gotoxy(20,5);
        printf ("================================================================================\n");
        printf("\n");
    	gotoxy(20,6);
        printf ("|                               APOTEK TADIKA MESRA                            |\n");
