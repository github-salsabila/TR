void header()
{
    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                           DATA OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("| NO. |     Nama      |    Jenis    |  Perusahaan  | Tanggal masuk | Stock |      Harga @     |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
}


void loading()
{
    //loading program
            printf("\tLoading....");
            for(i=1;i<=6;i++)
            {
               printf("\b\b\b\b");
               if(i==1||i==3||i==5)
               printf("    ");
               if(i==2||i==4||i==6)
               {
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
                Sleep(300);
                printf(".");
               }
               Sleep(300);
            }
}

void tambah_obat()
{
    char save = 'y';

    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                         TAMBAH OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("|                                 MASUKKAN DATA OBAT DI BAWAH                                 |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
    gotoxy(10,10);
    printf ("Masukkan jumlah obat yang ingin di inputkan : ");
    scanf ("%d", &jml);

    obat[i].numOfItem = jml;
    for (i = 0; i < jml; i++){
    	gotoxy(10, 11);
        printf ("Data obat ke-%d \n", i + 1);
        gotoxy(10, 12);
        printf ("Nama obat                  : ");
        scanf (" %s", &obat[i].nama);
        gotoxy(10, 13);
        printf ("Jenis obat                 : ");
        scanf ("%s", &obat[i].jenis);
        gotoxy(10, 14);
        printf ("Perusahaan asal            : ");
        scanf ("%s", &obat[i].fct);
        gotoxy(10, 15);
        printf ("Tanggal masuk (dd mm yyyy) : ");
        scanf (" %d %d %d", &obat[i].tanggal.tgl, &obat[i].tanggal.bln, &obat[i].tanggal.thn);
        gotoxy(10, 16);
        printf ("Stock obat                 : ");
        scanf ("%d", &obat[i].stock);
        gotoxy(10, 17);
        printf ("harga obat                 : ");
        scanf (" %d", &obat[i].harga);

        printf ("\n");
    }
    
    if (save == 'y' || save == 'Y')
    {
        file = fopen("dataObat.dat", "a+"); //selain file dapat ditulis file juga dapat dibaca
        fwrite(&obat[i], sizeof(struct data), 1, file); //Operator sizeof memberikan jumlah penyimpanan, dalam byte, yang diperlukan untuk menyimpan objek dari jenis operand

        gotoxy (15, 24);
        if (fwrite != 0)
        {
        	gotoxy (50,20);
            printf("~Berhasil disimpan~\n");
		}
        else
            printf("\npenyimpanan bermasalah");
        fclose(file);
    }
    i++;
}


void tampilkan_obat()
{
    header();
    for (int i = 0; i < jml; i++)
    {
    	gotoxy(10,10);
        printf ("| %-3d | %-13s | %-10s | %-12s | %02d-%02d-%04d    | %-5d | Rp %-15ld |\n",
            i + 1, obat[i].nama, obat[i].jenis, obat[i].fct, obat[i].tanggal.tgl, obat[i].tanggal.bln,
            obat[i].tanggal.thn, obat[i].stock, obat[i].harga);
    }
    printf ("===============================================================================================\n");
    system("pause");
}

void cari_obat() {
    char nama_obat[15];
    int ditemukan = 0;

    system("cls");
    gotoxy(10, 5);
    printf("===============================================================================================\n");
    gotoxy(10, 6);
    printf("|                                          CARI OBAT                                        |\n");
    gotoxy(10, 7);
    printf("===============================================================================================\n");
    gotoxy(10, 8);
    printf("|                                 MASUKKAN NAMA OBAT YANG DICARI                              |\n");
    gotoxy(10, 9);
    printf("===============================================================================================\n");
    gotoxy(10, 10);
    printf("Nama obat: ");
    scanf("%s", nama_obat);

    header();

    for (int j = 0; j < i; j++) {
        if (strcmp(nama_obat, obat[j].nama) == 0) {
        	gotoxy(10,10);
            printf("| %2d. | %13s | %10s | %13s | %2d-%2d-%4d | %5d | Rp.%15ld |\n",
                    j+1, obat[j].nama, obat[j].jenis, obat[j].fct,
                    obat[j].tanggal.tgl, obat[j].tanggal.bln, obat[j].tanggal.thn,
                    obat[j].stock, obat[j].harga);
            gotoxy(10,11);
            printf("-----------------------------------------------------------------------------------------------\n");
            ditemukan = 1;
        }
    }
    if (ditemukan == 0) {
        printf("Obat dengan nama %s tidak ditemukan.\n", nama_obat);
		}
}

void hapus_obat()
{
    char deleteObat[15];
    int flag = 0;

    system ("cls");
    gotoxy(10,5);
    printf ("===============================================================================================\n");
    gotoxy(10,6);
    printf ("|                                          HAPUS OBAT                                         |\n");
    gotoxy(10,7);
    printf ("===============================================================================================\n");
    gotoxy(10,8);
    printf ("|                                 MASUKKAN NAMA OBAT YANG DIHAPUS                              |\n");
    gotoxy(10,9);
    printf ("===============================================================================================\n");
    gotoxy(10,10);
    printf("Masukkan nama obat yang ingin dihapus: ");
    scanf(" %s", deleteObat);

    for (int i = 0; i < jml; i++){
        if (strcmp(deleteObat, obat[i].nama) == 0){
            for (int j = i; j < jml - 1; j++){
                obat[j] = obat[j+1];
            }
            jml--;
            flag = 1;
            break;
        }
    }
    if (flag == 1){
        printf("\nObat dengan nama %s berhasil dihapus.\n", deleteObat);
    }
    else{
        printf("\nObat dengan nama %s tidak ditemukan.\n", deleteObat);
    }

    system("pause");
}


