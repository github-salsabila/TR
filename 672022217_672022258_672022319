long harga;

void gotoxy(int x, int y)
{
    COORD coord = {0, 0};
    coord.X = x;
    coord.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
}

struct date{
    int tgl;
    int bln;
    int thn;
};

struct data{
    int kode[3];
    char nama[15];
    char jenis[7];
    char fct[15];
    int numOfItem;
    struct date tanggal;
    //union {
    //int tgl, bln, thn;
    //};
    int stock;
    long harga;
};
struct data obat[50];


